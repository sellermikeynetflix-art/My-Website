import { jsPDF } from "jspdf";
import { useEffect, useMemo, useRef, useState } from "react";
import { cn } from "@/utils/cn";

type Message = {
  id: string;
  role: "user" | "assistant";
  content: string;
  timestamp: string;
  attachments?: AttachmentPayload[];
};

type ModelState = {
  name: string;
  active: boolean;
  messages: Message[];
  loading: boolean;
  responseTime?: number;
  error?: string;
};

type Attachment = {
  id: string;
  file: File;
  preview?: string;
};

type AttachmentPayload = {
  name: string;
  size: number;
  type: string;
};

const defaultModels = [
  "OpenAI GPT-4o",
  "Anthropic Claude 3.5",
  "Google Gemini 1.5",
  "Meta Llama 3.1",
  "Mistral Large",
];

const createId = () =>
  globalThis.crypto?.randomUUID?.() ??
  `id-${Date.now()}-${Math.random().toString(16).slice(2)}`;

export function App() {
  const [models, setModels] = useState<ModelState[]>(
    defaultModels.map((name) => ({
      name,
      active: true,
      messages: [],
      loading: false,
    }))
  );
  const [prompt, setPrompt] = useState("");
  const [attachments, setAttachments] = useState<Attachment[]>([]);
  const [darkMode, setDarkMode] = useState(false);
  const [connectionStatus, setConnectionStatus] = useState("connecting");
  const [saveStatus, setSaveStatus] = useState<string | null>(null);
  const fileInputRef = useRef<HTMLInputElement>(null);
  const wsRef = useRef<WebSocket | null>(null);
  const streamingRef = useRef<Record<string, string>>({});
  const scrollRefs = useRef<Record<string, HTMLDivElement | null>>({});
  const sessionId = useMemo(() => createId(), []);
  const env = (import.meta as { env?: Record<string, string> }).env ?? {};
  const apiBase = env.VITE_API_URL ?? "http://localhost:5175";
  const wsUrl = env.VITE_WS_URL ?? "ws://localhost:5175";

  useEffect(() => {
    let isMounted = true;
    fetch(`${apiBase}/api/models`)
      .then((res) => res.json())
      .then((data) => {
        if (!isMounted || !Array.isArray(data.models)) return;
        setModels((prev) =>
          data.models.map((name: string) => {
            const existing = prev.find((item) => item.name === name);
            return (
              existing ?? {
                name,
                active: true,
                messages: [],
                loading: false,
              }
            );
          })
        );
      })
      .catch(() => undefined);

    return () => {
      isMounted = false;
    };
  }, []);

  useEffect(() => {
    const ws = new WebSocket(wsUrl);
    wsRef.current = ws;
    ws.onopen = () => setConnectionStatus("online");
    ws.onclose = () => setConnectionStatus("offline");
    ws.onerror = () => setConnectionStatus("error");
    ws.onmessage = (event) => {
      const data = JSON.parse(event.data as string);
      if (data.type === "start") {
        const messageId = createId();
        streamingRef.current[data.model] = messageId;
        setModels((prev) =>
          prev.map((model) =>
            model.name === data.model
              ? {
                  ...model,
                  loading: true,
                  error: undefined,
                  messages: [
                    ...model.messages,
                    {
                      id: messageId,
                      role: "assistant",
                      content: "",
                      timestamp: new Date().toISOString(),
                    },
                  ],
                }
              : model
          )
        );
      }
      if (data.type === "chunk") {
        const messageId = streamingRef.current[data.model];
        if (!messageId) return;
        setModels((prev) =>
          prev.map((model) => {
            if (model.name !== data.model) return model;
            return {
              ...model,
              messages: model.messages.map((message) =>
                message.id === messageId
                  ? { ...message, content: message.content + data.chunk }
                  : message
              ),
            };
          })
        );
      }
      if (data.type === "end") {
        setModels((prev) =>
          prev.map((model) =>
            model.name === data.model
              ? {
                  ...model,
                  loading: false,
                  responseTime: data.responseTime,
                }
              : model
          )
        );
      }
      if (data.type === "rate-limit") {
        setModels((prev) =>
          prev.map((model) =>
            model.name === data.model
              ? {
                  ...model,
                  loading: false,
                  error: data.message,
                }
              : model
          )
        );
      }
      if (data.type === "error") {
        setModels((prev) =>
          prev.map((model) => ({
            ...model,
            loading: false,
            error: data.message,
          }))
        );
      }
    };

    return () => {
      ws.close();
    };
  }, [wsUrl]);

  useEffect(() => {
    models.forEach((model) => {
      const panel = scrollRefs.current[model.name];
      if (panel) {
        panel.scrollTop = panel.scrollHeight;
      }
    });
  }, [models]);

  const handleToggleModel = (name: string) => {
    setModels((prev) =>
      prev.map((model) =>
        model.name === name ? { ...model, active: !model.active } : model
      )
    );
  };

  const handleFileSelect = (event: React.ChangeEvent<HTMLInputElement>) => {
    const files = Array.from(event.target.files ?? []);
    if (!files.length) return;
    setAttachments((prev) => [
      ...prev,
      ...files.map((file) => ({
        id: createId(),
        file,
        preview: file.type.startsWith("image/")
          ? URL.createObjectURL(file)
          : undefined,
      })),
    ]);
    event.target.value = "";
  };

  const removeAttachment = (id: string) => {
    setAttachments((prev) => {
      const target = prev.find((item) => item.id === id);
      if (target?.preview) URL.revokeObjectURL(target.preview);
      return prev.filter((item) => item.id !== id);
    });
  };

  const clearAttachments = () => {
    attachments.forEach((item) => {
      if (item.preview) URL.revokeObjectURL(item.preview);
    });
    setAttachments([]);
  };

  const handleSend = async (event: React.FormEvent) => {
    event.preventDefault();
    if (!prompt.trim() && attachments.length === 0) return;

    const activeModels = models.filter((model) => model.active);
    if (!activeModels.length) {
      setSaveStatus("Activate at least one model to send prompts.");
      return;
    }

    const attachmentPayload: AttachmentPayload[] = attachments.map((item) => ({
      name: item.file.name,
      size: item.file.size,
      type: item.file.type || "application/octet-stream",
    }));

    setModels((prev) =>
      prev.map((model) => {
        if (!model.active) return model;
        return {
          ...model,
          error: undefined,
          messages: [
            ...model.messages,
            {
              id: createId(),
              role: "user",
              content: prompt,
              timestamp: new Date().toISOString(),
              attachments: attachmentPayload,
            },
          ],
        };
      })
    );

    if (attachments.length) {
      const formData = new FormData();
      attachments.forEach((item) => formData.append("files", item.file));
      try {
        await fetch(`${apiBase}/api/upload`, { method: "POST", body: formData });
      } catch {
        setModels((prev) =>
          prev.map((model) =>
            model.active
              ? { ...model, error: "File upload failed." }
              : model
          )
        );
      }
    }

    if (wsRef.current?.readyState === WebSocket.OPEN) {
      wsRef.current.send(
        JSON.stringify({
          type: "prompt",
          prompt,
          sessionId,
          activeModels: activeModels.map((model) => model.name),
          attachments: attachmentPayload,
        })
      );
      setConnectionStatus("online");
    } else {
      setConnectionStatus("offline");
      setModels((prev) =>
        prev.map((model) =>
          model.active
            ? { ...model, error: "Connection lost. Reconnect to stream." }
            : model
        )
      );
    }

    setPrompt("");
    clearAttachments();
  };

  const handleSaveSession = () => {
    const savedSessions = JSON.parse(
      localStorage.getItem("multi-ai-sessions") ?? "[]"
    );
    const payload = {
      id: sessionId,
      createdAt: new Date().toISOString(),
      models,
    };
    localStorage.setItem(
      "multi-ai-sessions",
      JSON.stringify([payload, ...savedSessions])
    );
    setSaveStatus("Session saved to browser storage.");
    setTimeout(() => setSaveStatus(null), 3000);
  };

  const exportText = () => {
    const transcript = models
      .map((model) => {
        const header = `=== ${model.name} ===`;
        const lines = model.messages.map(
          (message) =>
            `[${message.role.toUpperCase()}] ${message.content.trim()}`
        );
        return [header, ...lines, ""].join("\n");
      })
      .join("\n");
    const blob = new Blob([transcript], { type: "text/plain" });
    const url = URL.createObjectURL(blob);
    const link = document.createElement("a");
    link.href = url;
    link.download = "multi-ai-session.txt";
    link.click();
    URL.revokeObjectURL(url);
  };

  const exportPdf = () => {
    const doc = new jsPDF();
    let y = 12;
    models.forEach((model, index) => {
      if (index !== 0) y += 6;
      doc.setFont("helvetica", "bold");
      doc.text(model.name, 12, y);
      y += 6;
      doc.setFont("helvetica", "normal");
      model.messages.forEach((message) => {
        const line = `${message.role.toUpperCase()}: ${message.content}`;
        const split = doc.splitTextToSize(line, 180);
        split.forEach((text: string) => {
          if (y > 280) {
            doc.addPage();
            y = 12;
          }
          doc.text(text, 12, y);
          y += 6;
        });
      });
    });
    doc.save("multi-ai-session.pdf");
  };

  const themeClasses = darkMode
    ? "bg-slate-950 text-slate-100"
    : "bg-slate-50 text-slate-900";

  return (
    <div className={cn("min-h-screen", themeClasses)}>
      <header
        className={cn(
          "fixed inset-x-0 top-0 z-40 border-b backdrop-blur",
          darkMode
            ? "border-slate-800/70 bg-slate-950/80"
            : "border-slate-200/70 bg-white/80"
        )}
      >
        <div className="mx-auto flex w-full max-w-screen-2xl items-center gap-4 px-4 py-4">
          <div
            className={cn(
              "flex h-11 w-11 items-center justify-center rounded-2xl",
              darkMode
                ? "bg-gradient-to-br from-indigo-500/80 to-cyan-400/70"
                : "bg-gradient-to-br from-indigo-500 to-cyan-400"
            )}
          >
            <svg
              className="h-6 w-6 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              strokeWidth={1.8}
              strokeLinecap="round"
              strokeLinejoin="round"
            >
              <path d="M12 3v4" />
              <path d="M4.5 7.5h15" />
              <rect x="3" y="7" width="18" height="14" rx="2" />
              <path d="M8 13h8" />
              <path d="M8 17h5" />
            </svg>
          </div>
          <div>
            <h1 className="text-lg font-semibold tracking-tight">
              Multi-AI Arena
            </h1>
            <p className="text-xs text-slate-400">
              Unified prompt orchestration for modern LLM teams.
            </p>
          </div>
          <div className="ml-auto flex flex-wrap items-center gap-2">
            <span
              className={cn(
                "rounded-full px-3 py-1 text-xs font-semibold",
                connectionStatus === "online"
                  ? "bg-emerald-500/15 text-emerald-400"
                  : connectionStatus === "connecting"
                    ? "bg-amber-500/15 text-amber-400"
                    : "bg-rose-500/15 text-rose-400"
              )}
            >
              {connectionStatus}
            </span>
            <button
              type="button"
              onClick={handleSaveSession}
              className={cn(
                "rounded-full px-3 py-1 text-xs font-semibold transition",
                darkMode
                  ? "bg-slate-800 text-slate-100 hover:bg-slate-700"
                  : "bg-slate-200 text-slate-700 hover:bg-slate-300"
              )}
            >
              Save Session
            </button>
            <button
              type="button"
              onClick={exportPdf}
              className={cn(
                "rounded-full px-3 py-1 text-xs font-semibold transition",
                darkMode
                  ? "bg-indigo-600/70 text-white hover:bg-indigo-500"
                  : "bg-indigo-600 text-white hover:bg-indigo-500"
              )}
            >
              Export PDF
            </button>
            <button
              type="button"
              onClick={exportText}
              className={cn(
                "rounded-full px-3 py-1 text-xs font-semibold transition",
                darkMode
                  ? "bg-cyan-500/70 text-white hover:bg-cyan-400"
                  : "bg-cyan-500 text-white hover:bg-cyan-400"
              )}
            >
              Export TXT
            </button>
            <button
              type="button"
              onClick={() => setDarkMode((prev) => !prev)}
              className={cn(
                "flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold transition",
                darkMode
                  ? "bg-slate-800 text-slate-100 hover:bg-slate-700"
                  : "bg-slate-200 text-slate-700 hover:bg-slate-300"
              )}
            >
              <span>{darkMode ? "Dark" : "Light"} mode</span>
              <span
                className={cn(
                  "h-3 w-3 rounded-full",
                  darkMode ? "bg-indigo-400" : "bg-amber-400"
                )}
              />
            </button>
          </div>
        </div>
        {saveStatus && (
          <div className="mx-auto max-w-screen-2xl px-4 pb-3 text-xs text-emerald-400">
            {saveStatus}
          </div>
        )}
      </header>

      <main className="mx-auto flex min-h-screen max-w-screen-2xl flex-col px-4 pb-32 pt-28">
        <div className="mb-4 flex items-center justify-between text-xs text-slate-400">
          <span>
            Active models: {models.filter((model) => model.active).length} / {" "}
            {models.length}
          </span>
          <span>Session ID: {sessionId.slice(0, 8)}</span>
        </div>
        <div className="flex flex-1 gap-4 overflow-x-auto pb-6">
          {models.map((model) => (
            <section
              key={model.name}
              className={cn(
                "flex h-[calc(100vh-240px)] w-[320px] min-w-[280px] flex-shrink-0 flex-col rounded-2xl border transition",
                darkMode
                  ? "border-slate-800 bg-slate-900/60"
                  : "border-slate-200 bg-white",
                model.active ? "" : "opacity-40 grayscale"
              )}
              style={{ resize: "horizontal", overflow: "hidden" }}
            >
              <div
                className={cn(
                  "flex items-center justify-between border-b px-4 py-3",
                  darkMode ? "border-slate-800" : "border-slate-200"
                )}
              >
                <div>
                  <h2 className="text-sm font-semibold">{model.name}</h2>
                  <p className="text-xs text-slate-400">
                    Response time:{" "}
                    {model.responseTime ? `${model.responseTime}ms` : "—"}
                  </p>
                </div>
                <div className="flex items-center gap-2">
                  {model.loading && (
                    <span className="inline-flex items-center gap-1 text-xs text-cyan-400">
                      <span className="h-2 w-2 animate-pulse rounded-full bg-cyan-400" />
                      Streaming
                    </span>
                  )}
                  {model.error && (
                    <span className="rounded-full bg-rose-500/20 px-2 py-1 text-[10px] text-rose-400">
                      {model.error}
                    </span>
                  )}
                  <button
                    type="button"
                    onClick={() => handleToggleModel(model.name)}
                    className={cn(
                      "relative h-6 w-11 rounded-full transition",
                      model.active
                        ? "bg-emerald-500/80"
                        : darkMode
                          ? "bg-slate-700"
                          : "bg-slate-300"
                    )}
                    aria-pressed={model.active}
                  >
                    <span
                      className={cn(
                        "absolute top-0.5 h-5 w-5 rounded-full bg-white transition",
                        model.active ? "left-5" : "left-0.5"
                      )}
                    />
                  </button>
                </div>
              </div>
              <div
                ref={(el) => {
                  scrollRefs.current[model.name] = el;
                }}
                className="flex-1 space-y-4 overflow-y-auto px-4 py-4"
              >
                {model.messages.length === 0 && (
                  <div className="rounded-2xl border border-dashed px-4 py-6 text-xs text-slate-400">
                    Awaiting prompts. Model is {model.active ? "active" : "disabled"}.
                  </div>
                )}
                {model.messages.map((message) => (
                  <div
                    key={message.id}
                    className={cn(
                      "flex w-full flex-col gap-2",
                      message.role === "user" ? "items-end" : "items-start"
                    )}
                  >
                    <div
                      className={cn(
                        "animate-message max-w-[90%] rounded-2xl px-4 py-3 text-sm shadow-sm",
                        message.role === "user"
                          ? darkMode
                            ? "bg-indigo-500/60 text-white"
                            : "bg-indigo-600 text-white"
                          : darkMode
                            ? "bg-slate-800 text-slate-100"
                            : "bg-slate-100 text-slate-900"
                      )}
                    >
                      <p className="whitespace-pre-wrap leading-relaxed">
                        {message.content || "…"}
                      </p>
                      {message.attachments && message.attachments.length > 0 && (
                        <div className="mt-2 flex flex-wrap gap-2">
                          {message.attachments.map((file) => (
                            <span
                              key={file.name}
                              className={cn(
                                "rounded-full px-2 py-1 text-[10px]",
                                darkMode
                                  ? "bg-slate-900 text-slate-200"
                                  : "bg-white text-slate-500"
                              )}
                            >
                              {file.name}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>
                    <span className="text-[10px] text-slate-400">
                      {new Date(message.timestamp).toLocaleTimeString()}
                    </span>
                  </div>
                ))}
              </div>
            </section>
          ))}
        </div>
      </main>

      <footer
        className={cn(
          "fixed inset-x-0 bottom-0 z-40 border-t backdrop-blur",
          darkMode
            ? "border-slate-800/70 bg-slate-950/85"
            : "border-slate-200/70 bg-white/85"
        )}
      >
        <div className="mx-auto w-full max-w-screen-2xl px-4 py-4">
          {attachments.length > 0 && (
            <div className="mb-3 flex flex-wrap gap-2">
              {attachments.map((item) => (
                <div
                  key={item.id}
                  className={cn(
                    "flex items-center gap-2 rounded-xl border px-3 py-2 text-xs",
                    darkMode
                      ? "border-slate-800 bg-slate-900/80"
                      : "border-slate-200 bg-slate-50"
                  )}
                >
                  {item.preview ? (
                    <img
                      src={item.preview}
                      alt={item.file.name}
                      className="h-10 w-10 rounded-lg object-cover"
                    />
                  ) : (
                    <div
                      className={cn(
                        "flex h-10 w-10 items-center justify-center rounded-lg",
                        darkMode ? "bg-slate-800" : "bg-white"
                      )}
                    >
                      <svg
                        className="h-5 w-5 text-slate-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        strokeWidth={1.6}
                        strokeLinecap="round"
                        strokeLinejoin="round"
                      >
                        <path d="M21 15V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v9" />
                        <path d="M3 20h18" />
                        <path d="M7 9h10" />
                      </svg>
                    </div>
                  )}
                  <div>
                    <p className="font-semibold text-slate-200">
                      {item.file.name}
                    </p>
                    <p className="text-[10px] text-slate-400">
                      {(item.file.size / 1024).toFixed(1)}kb
                    </p>
                  </div>
                  <button
                    type="button"
                    onClick={() => removeAttachment(item.id)}
                    className="text-slate-400 transition hover:text-rose-400"
                  >
                    ✕
                  </button>
                </div>
              ))}
            </div>
          )}
          <form
            onSubmit={handleSend}
            className={cn(
              "flex flex-col gap-3 rounded-2xl border px-3 py-3",
              darkMode
                ? "border-slate-800 bg-slate-900/70"
                : "border-slate-200 bg-white"
            )}
          >
            <div className="flex items-end gap-3">
              <button
                type="button"
                onClick={() => fileInputRef.current?.click()}
                className={cn(
                  "flex h-10 w-10 items-center justify-center rounded-xl border transition",
                  darkMode
                    ? "border-slate-700 bg-slate-800 text-slate-200 hover:border-slate-600"
                    : "border-slate-200 bg-slate-50 text-slate-500 hover:border-slate-300"
                )}
              >
                <svg
                  className="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  strokeWidth={1.6}
                  strokeLinecap="round"
                  strokeLinejoin="round"
                >
                  <path d="M21.44 11.05 12 20.5a6 6 0 0 1-8.49-8.49l9.9-9.9a4 4 0 0 1 5.66 5.66L9.88 17.26a2 2 0 1 1-2.83-2.83L15 6.5" />
                </svg>
              </button>
              <div className="flex-1">
                <textarea
                  value={prompt}
                  onChange={(event) => setPrompt(event.target.value)}
                  onInput={(event) => {
                    const target = event.currentTarget;
                    target.style.height = "auto";
                    target.style.height = `${target.scrollHeight}px`;
                  }}
                  rows={1}
                  placeholder="Send one prompt to every active model..."
                  className={cn(
                    "max-h-32 w-full resize-none bg-transparent text-sm outline-none",
                    darkMode ? "text-slate-100" : "text-slate-900"
                  )}
                />
              </div>
              <button
                type="submit"
                className={cn(
                  "rounded-xl px-4 py-2 text-sm font-semibold transition",
                  darkMode
                    ? "bg-indigo-500 text-white hover:bg-indigo-400"
                    : "bg-indigo-600 text-white hover:bg-indigo-500"
                )}
              >
                Send
              </button>
            </div>
            <div className="flex items-center justify-between text-[11px] text-slate-400">
              <span>
                Prompt dispatches to active panels simultaneously with shared attachments.
              </span>
              <span>Enter to send • Shift+Enter for new line</span>
            </div>
          </form>
          <input
            ref={fileInputRef}
            type="file"
            accept=".pdf,.txt,image/*"
            multiple
            className="hidden"
            onChange={handleFileSelect}
          />
        </div>
      </footer>
    </div>
  );
}
